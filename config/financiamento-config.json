  "validationRules": {
    "cnpjPattern": "^\\d{2}\\.\\d{3}\\.\\d{3}\\/\\d{4}\\-\\d{2}$",
    "emailPattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
    "phonePattern": "^\\(\\d{2}\\)\\s?\\d{4,5}\\-?\\d{4}$",
    "datePattern": "^(0[1-9]|[12][0-9]|3[01])/(0[1-9]|1[012])/\\d{4}$",
    "percentualTotal": 100
  },

  "calculators": {
    "vpl": {
      "description": "Valor Presente Líquido calculado com TMA fornecida pelo usuário",
      "formula": "VPL = Σ(FC_t / (1 + TMA)^t) - I_0",
      "requiresInput": ["tma", "fluxosCaixa", "investimentoInicial"]
    },
    "tir": {
      "description": "Taxa Interna de Retorno via método iterativo",
      "formula": "0 = Σ(FC_t / (1 + TIR)^t) - I_0",
      "requiresInput": ["fluxosCaixa", "investimentoInicial"]
    },
    "payback": {
      "description": "Payback simples e descontado",
      "formula": "Payback = Menor t tal que Σ(FC_i) >= I_0",
      "requiresInput": ["fluxosCaixa", "investimentoInicial", "tma"]
    },
    "dre": {
      "description": "DRE com impostos fornecidos pelo usuário",
      "requiresInput": ["receitas", "custos", "aliquotas"]
    }
  },

